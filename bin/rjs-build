#!/bin/bash

VERSION=$1
SRC_DIRECTORY=$HOME/code/ethon
SRC_FILE="ethon"

if [ -z $VERSION ]; then
  printf "Usage: rjs-build VERSION\n\nExample:\n rjs-build <branch_or_tag>\n"
  exit 1
fi

# Save working directory
WD=`pwd`

# Move to src directory
cd $SRC_DIRECTORY

# Checkout to the version
git checkout $VERSION

# Build the version
r.js -o app.build.js

# Rename the output file for including version
mv release/$SRC_FILE.js $WD/$SRC_FILE.$VERSION.js

# Restore git state
git checkout master 

# Restore working directory
cd $WD

printf "$SRC_FILE.$VERSION compiled successfully\n"
